## This configuration file instantiates nxLog options and points to a
## directory with additional config files (optionally)


define ROOT <%=@install_dir%>
Moduledir <%=@nxlog_moduledir%>
CacheDir <%=@nxlog_cachedir%>
Pidfile <%=@nxlog_pidfile%>
SpoolDir <%=@nxlog_spooldir%>
LogFile <%=@nxlog_logfile%>

<% if @include_external_configs == true %>
  # Include all configuration files in the specified locations
  include <%=@external_config_path%>
<% end %>